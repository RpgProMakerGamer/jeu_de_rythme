#version 330 corein vec3 fragmentColor;in vec2 fragmentTexCoord;out vec4 color;uniform sampler2D imageTexture;uniform vec2 uv_size;uniform float health;uniform float borderWidth = 5;uniform float borderHeight = 5;void main() {    vec2 widthheight = vec2(borderWidth/uv_size.x, borderHeight/uv_size.y);    vec2 botomleft = step(widthheight, fragmentTexCoord);    vec2 upperRight = step(widthheight , 1.-fragmentTexCoord);    float vec2ToFloat = botomleft.x * botomleft.y * upperRight.x * upperRight.y;    vec2ToFloat = 1-  vec2ToFloat;    color = vec4(vec3(vec2ToFloat), 1.0);    color.r += (1-color.r);    color.r -= step(health, fragmentTexCoord.x)-color.g;}